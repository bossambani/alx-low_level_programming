CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: school

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
	
main.o: main.c m.h
	$(CC) -c main.c -o main.o

school.o: school.c m.h
	$(CC) -c school.c -o school.o

clean:
	$(RM) *~\#*# $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

